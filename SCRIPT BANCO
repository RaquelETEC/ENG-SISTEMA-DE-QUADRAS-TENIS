/*SCRIPT PARA CRIAR BANCO DE DADOS E TABELAS 
-CAMPO TIPO CHAR SO ACEITAM ARMAZENAR 1 LETRA. VAMOS USAR S OU N 
COMO BLOQUEADO : S OU N 
S = BLOQUEADO 
N = DESBLOQUEADO

*/


create database sistema;  --NOME DO BANCO É SISTEMA 

CREATE TABLE USUARIO (
ID_USUARIO smallint AUTO_INCREMENT PRIMARY KEY,
LOGIN VARCHAR(30) NOT NULL, 
SENHA VARCHAR(30) NOT NULL,
BLOQUEADO CHAR  NOT NULL,  -SO 2 OPÇÕES S OU N 
FUNCAO VARCHAR (30) NOT NULL
);

create table RESERVA(
ID_RESERVA smallint AUTO_INCREMENT PRIMARY KEY,
NOME_CLIENTE VARCHAR(30) NOT NULL,
CPF_CLIENTE VARCHAR (20) NOT NULL,
PAGAMENTO VARCHAR (30) NOT NULL, 
ID_QUADRA integer NOT NULL,
NOME_QUADRA VARCHAR (30) NOT NULL, 
HORA_INICIO TIME ,
HORA_FIM TIME, 
DIA date,
HORA_CHEGADA TIME, 
HORA_SAIDA TIME , 
COMPARECEU CHAR
);

CREATE table CAD_QUADRA(
ID_QUADRA smallint AUTO_INCREMENT PRIMARY KEY,
NOME_QUADRA VARCHAR (30) NOT NULL,
COBERTA CHAR NOT NULL,
ARQUIBANCADA CHAR NOT NULL,
VALOR numeric(12.6)); 

CREATE TABLE HORARIOS(
ID_HORARIO smallint AUTO_INCREMENT PRIMARY KEY,
DATA_HORARIO DATE,
HORA_INICIO TIME,
HORA_FIM TIME, 
ID_QUADRA INTEGER,
NOME_QUADRA VARCHAR (30))


